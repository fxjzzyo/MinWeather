<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/my_text_style"
            android:id="@+id/tv_week_day3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_type3"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            style="@style/my_text_style"
            android:id="@+id/tv_wendu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5°C~4°C" />

        <TextView
            style="@style/my_text_style"
            android:id="@+id/tv_weather3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="多云转晴" />

        <TextView
            style="@style/my_text_style"
            android:id="@+id/tv_wind3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="微风" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_week_day4"
            style="@style/my_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_type4"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/tv_wendu4"
            style="@style/my_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5°C~4°C" />

        <TextView
            android:id="@+id/tv_weather4"
            style="@style/my_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="多云转晴" />

        <TextView
            android:id="@+id/tv_wind4"
            style="@style/my_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="微风" />
    </LinearLayout>

</LinearLayout>